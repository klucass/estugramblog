---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Article from "../components/Article.astro";
const allPosts = await getCollection("posts");
---

<Layout url={new URL("https://blog.estugram.com/")} title="Estugram Blog" description="Dicas de produtividade para melhorar o seu estudo" img="https://blog.estugram.com/home-img-twitter.png">
  {allPosts.map((post) => <Article post={post} />)}
</Layout>
