---
export interface Props {
  title: string;
  description: string;
  img: string;
  ogurl: URL;
}

const { title, description, img, ogurl } = Astro.props;

import "../css/base.css";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="pt-br" data-theme="night">
  <head>
    <script defer data-domain="estugram.com" src="https://plausible.estugram.com/js/script.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content="organização, estudos, cronômetro, relatório, desempenho, pomodoro, produtividade, controle, eficiência, concursos, provas, OAB, Enem, vestibular" />
    <meta name="description" content="Dicas de produtividade para melhorar o seu estudo. Estugram simplifica a organização dos seus estudos. Estude com mais produtividade e eficiência controlando seu desempenho nas matérias e assuntos que estudou" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@estugramapp" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={img} />
    <meta property="og:title" content={title} />
    <meta property="og:image" content={img} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={ogurl} />
    <title>{title}</title>
  </head>
  <body class="font-poppins">
    <div class="w-full py-2 mb-10 text-center bg-gradient-to-r from-blue via-purple to-red border-0">
      <a class="text-white p-1 px-5 bg-black rounded-xl bg-opacity-30 text-sm hover:bg-opacity-50" href="https://estugram.com">Estude agora com o <span class="font-poppinsBold"> Estugram →</span></a>
    </div>
    <div class="md:w-[780px] mx-auto">
      <header class="p-10 mb-10 text-center">
        <h1 class="font-poppinsBold text-white text-6xl">
          <a href="/" class="">
            Estugram <span class="text-red -ml-4 font-poppinsExtra">/</span>
            <span class="text-green -ml-2 font-assistantBold">Blog</span></a
          >
        </h1>
      </header>
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
