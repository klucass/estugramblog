---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import "./main.css";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="organização, estudos, cronômetro, relatório, desempenho, pomodoro, produtividade, controle, eficiência, concursos, provas, OAB, Enem, vestibular"
    />
    <meta
      name="description"
      content="Dicas de produtividade para melhorar o seu estudo. stugram simplifica a organização dos seus estudos. Estude com mais produtividade e eficiência controlando seu desempenho nas matérias e assuntos que estudou"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="md:w-[780px] mx-auto">
      <header class="bg-purple p-10 mb-10 text-center">
        <h1 class="font-ttcommons font-bold text-white text-6xl">
          <a href="/">
            Estugram <span class="text-red -ml-5">/</span>
            <span class="text-green -ml-5">Blog</span></a
          >
        </h1>
      </header>
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
