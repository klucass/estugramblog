---
export interface Props {
  title: string,
  description: string,
  img: string
}

const { title, description, img } = Astro.props;

import "./main.css";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="organização, estudos, cronômetro, relatório, desempenho, pomodoro, produtividade, controle, eficiência, concursos, provas, OAB, Enem, vestibular"
    />
    <meta
      name="description"
      content="Dicas de produtividade para melhorar o seu estudo. Estugram simplifica a organização dos seus estudos. Estude com mais produtividade e eficiência controlando seu desempenho nas matérias e assuntos que estudou"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@estugramapp" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={img} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="w-full py-2 mb-10 text-center bg-gradient-to-r from-blue via-purple to-red border-0"
    >
      <a
        class="text-white p-1 px-5 bg-black rounded-xl bg-opacity-30 text-sm hover:bg-opacity-50"
        href="https://estugram.com"
        >Estude agora com o <span class="font-bold underline">
          Estugram →</span
        ></a
      >
    </div>
    <div class="md:w-[780px] mx-auto">
      <header class="bg-purple p-10 mb-10 text-center">
        <h1 class="font-ttcommons font-bold text-white text-6xl">
          <a href="/">
            Estugram <span class="text-red -ml-5">/</span>
            <span class="text-green -ml-5">Blog</span></a
          >
        </h1>
      </header>
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
