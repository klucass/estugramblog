---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const postURL = `${import.meta.env.PUBLIC_SITE_URL}${Astro.url.pathname}`;
---

<Layout title={frontmatter.title} description={frontmatter.description} img={frontmatter.image.url} ogurl={new URL(postURL)}>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} />

  <div class="px-5 md:px-0">
    <h1 class="text-5xl text-green my-10 font-poppinsBold">
      {frontmatter.title}
    </h1>
    <article class="leading-loose my-10 font-assistant">
      <slot />
    </article>
  </div>
</Layout>
