---
const { post } = Astro.props;
---

<article class="mb-24">
  <img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />
  <a href={post.url}>
    <h2 class="text-5xl font-ttcommons font-semibold text-red my-5">
      {post.frontmatter.title}
    </h2>
  </a>
  <p class="text-gray-700 leading-loose font-sans [&>p]:my-5">
    {post.frontmatter.description}
  </p>
</article>
